<odoo>
    <data>
        <record id="view_partner_form_inherit_add_vehicle_data" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.add.vehicle.data</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Añadir una nueva página antes de la página Contacts & Addresses -->
                <xpath expr="//page[@name='contact_addresses']" position="before">
                    <page name="autos" string="Vehicles">
                        <field name="car_ids" groups="workshop_mechanic.group_car_user">
                            <tree string="Vehicles">
                                <field name="marca_auto" string="Brand" translate="1"/>
                                <field name="nombre_auto" string="Vehicles" translate="1"/>
                                <!--<field name="modelo_auto" string="Vehicle model" translate="1"/>-->
                                <field name="modelo_auto" string="Model" widget="selection" options="{'yearpicker': true}" translate="1"/>
                                <field name="color_auto" string="Color" translate="1"/>
                                <field name="placas_auto" string="Vehicle registration" translate="1"/>   
                                <field name="kilometraje_auto" string="Odometer" translate="1"/>
                                <field name="tanque_gasolina" string="Fuel tank" translate="1"/>
                            </tree>
                            <form string="Vehicle">
                                <group>
                                    <field name="marca_auto" string="Brand" translate="1"/>
                                    <field name="nombre_auto" string="Vehicles" translate="1"/>
                                    <!--<field name="modelo_auto" string="Vehicle model" translate="1"/>-->
                                    <field name="modelo_auto" string="Model" widget="selection" options="{'yearpicker': true}" translate="1"/>
                                    <field name="color_auto" string="Color" translate="1"/>
                                    <field name="placas_auto" string="Vehicle registration" translate="1"/>
                                    <field name="kilometraje_auto" string="Odometer" translate="1"/>
                                    <field name="tanque_gasolina" string="Fuel tank" translate="1"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
                   
