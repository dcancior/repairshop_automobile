<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_order_form_datos_taller" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="partner_mobile"/>
                </xpath>
            </field>
        </record>

        <record id="view_sale_order_form_inherit_add_vehicle_data" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.add.vehicle.data</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="before">
                    <group string="Vehículos de clientes" translate="1">
                        <group>
                            <field name="selected_car_id" string="Vehículo seleccionado" widget="many2one" domain="[('partner_id', '=', partner_id)]" context="{'default_partner_id': partner_id, 'form_view_ref': 'workshop_mechanic.view_car_kanban_mobile'}" options="{'no_create_edit': false, 'no_quick_create': true, 'mobile_friendy': true, 'kanban_view_ref': 'workshop_mechanic.view_car_kanban_mobile'}" translate="1"/>
                            <field name="marca_auto" string="Marca" widget="selection" translate="1"/>
                            <field name="nombre_auto" string="Nombre" widget="selection" translate="1"/>
                            <field name="color_auto" string="Color" translate="1"/>
                            <field name="anio_auto" string="Modelo" widget="selection" options="{'yearpicker': true}" translate="1"/>
                        </group>
                        <group>
                            <field name="serie_auto" string="VIN" translate="1"/>
                            <field name="placas_auto" string="Placas" translate="1"/>
                            <field name="kilometraje_auto" string="Kilometraje" translate="1"/>
                            <field name="tanque_gasolina" string="Combustible" translate="1"/>
                            <field name="observations" string="Observaciones" translate="1"/>
                            <field name="reception_date" string="Fecha recepción" widget="datetime" translate="1"/>
                            <field name="entrega_date" string="Fecha entrega" widget="datetime" translate="1"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!--
        Add button in the view list model sale order list 
        -->
        <record id="view_sale_order_tree_inherit_car_description" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.car.description</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="car_description"/>
                    <field name="reception_date" string="Fecha recepción"/>
                    <field name="entrega_date" string="Fecha entrega"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>